<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define a cor de fundo sólida para o botão.
         Você pode ajustar este valor hexadecimal para a tonalidade exata de verde que desejar. -->
    <solid android:color="#004D40" />

    <!-- Define o raio dos cantos para criar a forma arredondada.
         Ajuste o valor de 'dp' para deixar os cantos mais ou menos arredondados. -->
    <corners android:radius="20dp" />

</shape>
