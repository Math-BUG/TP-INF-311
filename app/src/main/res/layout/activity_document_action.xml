<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".DocumentActionActivity">

    <TextView
        android:id="@+id/tvDocumentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Document ID: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvDocumentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Document Name: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <ImageView
        android:id="@+id/imgFullDocument"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0"
        android:contentDescription="Full Document Image" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Documento"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compartilhar"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:backgroundTint="#FF6347"/> </LinearLayout>